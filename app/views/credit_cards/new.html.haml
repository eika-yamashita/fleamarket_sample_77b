.card
  = form_tag(pay_credit_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
    .card__title
      クレジットカード情報入力
    .cardInfo
      .cardInfo__content
        .cardInfo__content__num
          カード番号
          %span 必須
          %p
            = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
          %ul
            %li
              = image_tag 'https://pcweb-assets.mercdn.net/assets/img/card/visa.svg?3222000695', width: '49', height: '20'
            %li
              = image_tag 'https://pcweb-assets.mercdn.net/assets/img/card/master-card.svg?3222000695', width: '34', height: '20'
            %li
              = image_tag 'https://pcweb-assets.mercdn.net/assets/img/card/saison-card.svg?3222000695', width: '30', height: '20'
            %li
              = image_tag 'https://pcweb-assets.mercdn.net/assets/img/card/jcb.svg?3222000695', width: '32', height: '20'
            %li
              = image_tag 'https://pcweb-assets.mercdn.net/assets/img/card/american_express.svg?3222000695', width: '21', height: '20'
            %li
              = image_tag 'https://pcweb-assets.mercdn.net/assets/img/card/dinersclub.svg?3222000695', width: '32', height: '20'
            %li
              = image_tag 'https://pcweb-assets.mercdn.net/assets/img/card/discover.svg?3222000695', width: '34', height: '20'

      .cardInfo__content
        .cardInfo__content__limit
          有効期限
          %span 必須
          %p
            %select#exp_month{name: "exp_month", type: "text"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            %span 月
            %select#exp_year{name: "exp_year", type: "text"}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            %span 年
      .cardInfo__content
        .cardInfo__content__code
          セキュリティーコード
          %span 必須
          %p
            = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
      .cardInfo__content
        .cardInfo__content__btn
          #card_token
          = submit_tag "追加する", id: "token_submit"
